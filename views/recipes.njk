{% extends "layout.njk" %}

{% block head %}
    <title>Foodfy | Recipes</title>
{% endblock %}

{% block content %}
    <section class="cards">

        {% for item in items %}
            <div class="card" id="{{item.id}}">

                <div class="container__image">
                    <img src="{{item.image}}" alt="{{item.title}}">
                </div>

                <div class="container__title">
                    <p>{{item.title}}</p>
                </div>

                <div class="container__author">
                    <p>por {{item.author}}</p>
                </div>
            </div>
        {% endfor %}

    </section>

{% endblock %}